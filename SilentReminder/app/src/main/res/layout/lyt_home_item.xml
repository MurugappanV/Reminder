<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="handlers"
            type="com.rethinking.silentreminder.ui.base.handler.BaseHandler" />

    </data>
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/remindr_type_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/birthday_small_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/dimen_16dp"/>
    <LinearLayout
        android:id="@+id/desc_lyt"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintLeft_toRightOf="@+id/remindr_type_image"
        android:layout_marginStart="@dimen/dimen_30dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/color_FF6292F7"
        android:textSize="@dimen/dimen_12sp"
        android:text="26 Jan"
        />
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:textColor="@color/color_FFF4A4A4A"
            android:textSize="@dimen/dimen_12sp"
            android:text="26 Jan"
            />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp">

    </LinearLayout>
    <!--<View-->
        <!--android:id="@+id/seperator"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="@dimen/dimen_30dp">-->

    <!--</View>-->

</android.support.constraint.ConstraintLayout>
</layout>